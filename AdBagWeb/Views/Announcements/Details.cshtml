@using AdBagWeb.Classes
@model Announcement

@{
    ViewData["Title"] = "Details";
}

    <div class="container">
        <h2>@Model.Title</h2>

        <!-- Under title Info -->
        <ul class="list-unstyled list-inline">
            <li style="margin:0px 10px 0px 0px">
                <i class="glyphicon glyphicon-user"></i>
                <a href="#">@Model.IdUserNavigation.Username</a>
            </li>
            <li style="margin:0px 10px 0px 10px">
                <i class="glyphicon glyphicon-time"></i>
                <label href="#">@Model.UploadDate</label>
            </li>
            <li style="margin:0px 10px 0px 10px">
                <i class="glyphicon glyphicon-list-alt"></i>
                <a href="#">@Model.IdCategoryNavigation.Name</a>
            </li>
            <li style="margin:0px 0px 0px 10px">
                <label href="#">@Model.Type</label>
            </li>
        </ul>
    </div>
<div class="container">

    <div class="row">

        @if (Model.IdImage != null)
        {
            var imgSrc = Model.IdImageNavigation.Path;
            <div class="col-md-4 thumbnail">
                <img src="@imgSrc" />
            </div>
        }
    </div>
</div>


<!-- General Info -->
<div class="row">

    <div class="col-xs-6">
        <label href="#">@Model.Description</label>
    </div>
</div>


<div class="container">
    <div class="row" style="margin-top:20px">
        <h4>Comments:</h4>

        <div class="form-group form-inline">
            <form asp-action="Details">
                <div class="form-group">
                    <input class="form-control" name="comment" type="text" placeholder="Your comments" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-default" />
                    <input type="hidden" name="id" value="@Model.IdAnnouncement" />
                </div>
            </form>
        </div>
    </div>


</div>
<div class="container">

    @{
        foreach (Comment item in ViewBag.Comments)
        {
            <div class="row">
                <div style="font-size:20px">
                    <span class="glyphicon glyphicon-user"></span>
                    @item.IdUserNavigation.Username
                    <h6>@item.Text</h6>
                    <p style="
                    font-size:12px;
                    color:gray
                    ">
                        Posted on @item.PostTime
                    </p>
                </div>
            </div>
        }
    }
</div>




