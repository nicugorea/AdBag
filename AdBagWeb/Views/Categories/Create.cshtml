@model AdBagWeb.Models.Category
@using AdBagDictionaries
@{
    ViewData["Title"] = "Create category";
}


<br />
<h4>@Properties.CreateANewCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Properties.CategoryName</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="@Properties.CategoryName" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div class="btn-group">

    <div class="form-group">
        <input type="button" class="btn btn-default" asp-action="Index" value="@Properties.Back"/>
        <input type="submit" value="@Properties.Create" class="btn btn-default" />
        <span asp-validation-for="@Properties.Category"></span>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
