@model AdBagWeb.Models.Category
@using AdBagDictionaries
@{
    ViewData["Title"] = Properties.DeleteCategory;
}
<br />
<h3>@Properties.DeleteConfirmQuestion</h3>
<div>
    <h4>@Properties.Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Properties.CategoryID
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdCategory)
        </dd>
        <dt>
            @Properties.CategoryName
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div class="btn-group">
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCategory" />
        <a class="btn btn-default" asp-action="Index">@Properties.Back</a>
        <input type="submit" value="@Properties.Delete" class="btn btn-default" />
    </form>
</div>
